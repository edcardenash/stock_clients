<h1>Lista de Clientes</h1>

<%= form_with(url: clients_path, method: "get") do |form| %>
  <%= form.text_field :search, placeholder: "Buscar cliente" %>
  <%= form.submit "Buscar" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Nombre Legal</th>
      <th>RUT</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client['legalName'] %></td>
        <td><%= client['VATId'] %></td>
        <td><%= link_to 'Ver Detalle', client_path(client['customerId']) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @clients %>
